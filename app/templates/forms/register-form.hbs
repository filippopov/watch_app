<form action="#/register" method="post" class="form-signup">
    <div class="social-login">
        <button class="btn facebook-btn social-btn" type="button"><span><i class="fa fa-facebook-f"></i> Sign up with Facebook</span> </button>
    </div>
    <div class="social-login">
        <button class="btn google-btn social-btn" type="button"><span><i class="fa fa-google-plus-g"></i> Sign up with Google+</span> </button>
    </div>

    <p style="text-align:center">OR</p>

    <input type="email" name="email" id="user-email" class="form-control" placeholder="Email address" required autofocus="">
    <input type="password" name="password" id="user-pass" class="form-control" placeholder="Password" required autofocus="">
    <input type="password" name="repeatPass" id="user-repeatpass" class="form-control" placeholder="Repeat Password" required autofocus="">

    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-user-plus"></i> Sign Up</button>
    <a href="" id="cancel_signup"><i class="fa fa-angle-left"></i> Back</a>
</form>